# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# Replace with your actual MongoDB connection string
MONGO_URI=mongodb://localhost:27017/your_database_name

# JWT Configuration
# Generate a secure secret using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret_key_here_minimum_64_characters
JWT_EXPIRES_IN=7d

# CORS Configuration
# For production, set to your actual frontend domain(s)
FRONTEND_URL=http://localhost:3000

# Other environment variables
LOG_LEVEL=debug

# Production Environment Variables (add these for production)
# API_RATE_LIMIT=100
